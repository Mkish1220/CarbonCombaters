<section class="vh-250" style="background-image: url(/css/istockphoto-1310431407-612x612.jpg);">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Let's Learn more about you</p>

                <form class="mx-1 mx-md-4">

                  <div class="form-group item"> 
                      <p>How many cars do you own?</p>
                    <div class="input-group">
                      <input type="cars" name="cars" id="cars" min="0">
                    </div> 
                  </div>


              <div class="question item">
                  <p>If you have a car, what does it run on?</p>
                <div class="question-answer">
                  <div>
                    <input type="checkbox" id="gasoline" name="gasoline">
                    <label for="gasoline" class="checkbox" checked>Gasoline</label>
                  </div>

                  <div>
                      <input type="checkbox" id="diesel" name="diesel">
                      <label for="diesel" class="checkbox" checked>Diesel</label>
                  </div>
                
                  <div>
                      <input type="checkbox" id="electric" name="electric">
                      <label for="electric" class="checkbox" checked>Electric</label>
                  </div>
                </div>
              </div>  
              
                  <div class="form-group item"> 
                      <p>How many miles do you drive per week?</p>
                    <div class="input-group">
                      <input type="miles" name="miles" id="miles" min="0">
                    </div> 
                  </div>
                  
                  <div class="form-group item"> 
                      <p>How many hours do you spend at home?</p>
                    <div class="input-group">
                      <input type="hours" name="hours" id="hours" min="0">
                    </div> 
                  </div>

                  <div class="question">
                    <p>What type of gas does your home use</p>
                  <div class="question-answer">

                    <input type="checkbox"  id="nattie" name="nattie">
                    <label for="nattie" class="checkbox" value= "nattie" checked><span>Natural Gas</span></label>

                    <input type="checkbox"  id="liquid" name="fuel">
                    <label for="liquid" class="checkbox" checked><span>Liquid Petrol</span></label>

                    <input type="checkbox" id="fuel" name="fuel">
                    <label for="fuel" class="checkbox" checked><span>Fuel Oil</span></label>

                    <input type="checkbox"  name="none">
                    <label for="none" class="checkbox" checked><span>None/Other</span></label>
                  
                  </div>
                  </div> 
                        <div class="question">
                          <p>Do You Recycle</p>
                          <div class="question-answer">

                            <input type="checkbox" id="recycle" name="recycle">
                            <label for="recycle" class="checkbox" checked><span>Yes</span></label>

                            <input type="checkbox" id="" name="">
                            <label for="" class="checkbox" checked><span>No</span></label>
                          </div>
                        </div>

                        <div class="item">
                          <p>How many times a year do BBQ?</p>
                          <input type="bbq" name="bbq" id="bbq" min="0">
                        </div>


                        <div class="item">
                          <p>How many phones do you use?</p>
                          <input type="phones" name="phones" id="phones" min="0">
                        </div>


                        <div class="item">
                          <p>How many water bottles do you drink in a day?</p>
                          <input type="water" name="water" id="water" min="0">
                        </div>

                        <div class="question"></div>
                        <p>What is your diet like?</p>
                        <div class="question-answer"></div>
                        <input type="checkbox" id="meat" name="meat">
                        <label for="meat" class="checkbox" checked><span>Meat Lover Diet</span></label>


                        <input type="checkbox" id="average" name="average">
                        <label for="average" class="checkbox" checked><span>Average Diet</span></label>
                        <input type="checkbox" id="nobeef" name="nobeef" />
                        <label for="nobeef" class="checkbox" checked><span>No Beef Diet</span></label>
                        <input type="checkbox" value="none" id="vegetarian" name="vegetarian">
                        <label for="vegetarian" class="checkbox" checked><span>Vegetarian</span></label>
                        <input type="checkbox" value="" id="vegan" name="vegan">
                        <label for="vegan" class="checkbox" checked><span>Vegan</span></label>
                      </div>
                    </div>






                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <button type="submit" class="btn btn-primary btn-lg" id="questionForm"
                        data-userid={{user_id}}>Calculate!</button>
                    </div>

                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2 position-relative">



              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<script src="./js/newQuestions.js"></script>
<script src="./js/algorithms.js"></script>